{
	"name": "egl_window",
	"targetType": "executable",
	"authors": [
		"Rémi Thebault"
	],
	"description": "Wayland egl client example.",
	"copyright": "Copyright © 2017, Rémi Thebault",
	"license": "MIT",
	"preGenerateCommands": [
		"dub run wayland-d:scanner -- -m zxdg_shell_v6 -i $PACKAGE_DIR/xdg-shell-unstable-v6.xml -o $PACKAGE_DIR/source/zxdg_shell_v6.d"
	],
	"dependencies": {
		"wayland-d:client": { "path": "../../client" },
		"wayland-d:egl": { "path": "../../egl" },
		"wayland-d:cursor": { "path": "../../cursor" },
		"derelict-gles": {
			"comment": "patched version of derelict-gles is needed",
			"path": "../../3rdparty/DerelictGLES"
		}
	},
	"subConfigurations": {
		"derelict-gles": "wayland"
	},
	"configurations": [
		{
			"name": "static",
			"versions": ["WlStatic"],
			"subConfigurations": {
				"wayland-d:client": "static",
				"wayland-d:egl": "static"
			}
		},
		{
			"name": "dynamic",
			"versions": ["WlDynamic"],
			"subConfigurations": {
				"wayland-d:client": "dynamic",
				"wayland-d:egl": "dynamic"
			}
		}
	]
}
